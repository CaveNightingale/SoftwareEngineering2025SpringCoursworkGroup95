<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.software.coursework.gui.EditItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<fx:root
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        type="io.github.software.coursework.gui.EditItem"
>
    <AnchorPane
            styleClass="edit-item"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
    >
        <VBox
                styleClass="edit-item-content"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
        >
            <HBox styleClass="edit-item-1st-row">
                <TextField fx:id="name" HBox.hgrow="ALWAYS"/>
                <Region prefWidth="20"/>
                <Button text="Insert" onAction="#handleAction" fx:id="submit"/>
            </HBox>
        </VBox>
    </AnchorPane>
</fx:root>
