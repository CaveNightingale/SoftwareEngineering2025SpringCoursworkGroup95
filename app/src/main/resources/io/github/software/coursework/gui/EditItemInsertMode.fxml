<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="io.github.software.coursework.gui.EditItemController"
>
    <AnchorPane
            styleClass="edit-item"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
    >
        <VBox
                styleClass="edit-item-content"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
        >
            <HBox styleClass="edit-item-1st-row">
                <TextField fx:id="nameField" HBox.hgrow="ALWAYS"/>
                <Region prefWidth="20"/>
                <Button text="Insert" onAction="#handleSubmit" fx:id="submitButton"/>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
