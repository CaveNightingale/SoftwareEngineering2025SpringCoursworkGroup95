<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.software.coursework.gui.MainView?>
<?import io.github.software.coursework.gui.TransactionList?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import io.github.software.coursework.gui.EntityList?>
<?import javafx.scene.text.Text?>
<fx:root
        type="io.github.software.coursework.gui.MainView"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        prefHeight="600"
        prefWidth="800"
>
    <stylesheets>
        <URL value="@_style.css"/>
    </stylesheets>
    <TabPane
            fx:id="tabPane"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0"
    >
        <Tab closable="false" text="Model">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <VBox>
                    <ToolBar>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Settings" onAction="#handleSettings"/>
                    </ToolBar>
                    <HBox styleClass="model-title">
                        <Label text="Budget"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="\$1000000000000000000.00 used"/>
                    </HBox>
                    <HBox>
                        <!-- Budget Sequential prediction -->
                    </HBox>
                    <HBox>
                        <!-- Budget Usage heatmap -->
                    </HBox>
                    <HBox styleClass="model-title">
                        <Label text="Saving"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Text text="\$1000000000000000000.00 saved"/>
                    </HBox>
                    <HBox>
                        <!-- Saving Sequential prediction -->
                    </HBox>
                    <HBox>
                        <!-- Saving Income heatmap -->
                    </HBox>
                </VBox>
            </ScrollPane>
        </Tab>
        <Tab closable="false" text="Transactions" fx:id="transactionTab">
            <VBox>
                <ToolBar>
                    <Button text="Add" onAction="#handleAddTransaction"/>
                    <Button text="CSV" onAction="#handleExportCSV"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- is "save" button needed? -->
                    <Pagination fx:id="pagination"/>
                </ToolBar>
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                    <TransactionList fx:id="transactionList" styleClass="transaction-list"/>
                </ScrollPane>
            </VBox>
        </Tab>
        <Tab closable="false" text="Entities" fx:id="entityTab">
            <VBox>
                <ToolBar>
                    <Button text="Add" onAction="#handleAddEntity"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- is "save" button needed? -->
                </ToolBar>
                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                    <EntityList fx:id="entityList" styleClass="entity-list"/>
                </ScrollPane>
            </VBox>
        </Tab>
        <Tab fx:id="settingsTab" text="Settings">
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                <VBox fx:id="settings">
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>
</fx:root>
